# Central environment variables for docker-compose
# API + Worker will import these via env_file.

# ASP.NET binding
ASPNETCORE_URLS=http://0.0.0.0:8080

# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=emails
ConnectionStrings__Postgres=Host=postgres;Port=5432;Database=emails;Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD}

# Redis
Redis__Connection=redis:6379

# RabbitMQ
Rabbit__Host=rabbitmq
Rabbit__User=guest
Rabbit__Pass=guest

# SMTP (Mailhog dev)
Smtp__Host=mailhog
Smtp__Port=1025
Smtp__From=no-reply@example.com

# Idempotency / rate-limit knobs
RateLimit__MaxPerMinute=60
Idempotency__TtlSeconds=3600

# OpenTelemetry
Otel__Endpoint=http://otel-collector:4317

# Optional overrides (uncomment to customize)
# ASPNETCORE_ENVIRONMENT=Development
# LOG_LEVEL=Information

Authentication__Google__ClientId=
Authentication__Google__ClientSecret=
